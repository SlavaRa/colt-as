<?xml version="1.0" encoding="UTF-8"?>

<?import codeOrchestra.colt.as.ui.components.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<FormGroup fx:controller="codeOrchestra.colt.as.ui.propertyTabPane.compilerSettings.BuildSettingsFormController" xmlns:fx="http://javafx.com/fxml">
  <LTBForm fx:id="mainClass" text="Main class:" formType="BUTTON" />
  <LTBForm fx:id="fileName" text="Output file name:" formType="TEXT_FIELD" />
  <LTBForm fx:id="outPath" text="Output path:" formType="BUTTON" browseType="DIRECTORY" />

  <HBox fx:id="playerHBox" spacing="10.0">
      <Label minWidth="-Infinity" text="Target player version:" />
      <ChoiceBox fx:id="playerVersionCB" />
      <Label fx:id="errorLabel" text="Incorrect Flex SDK path specified" textFill="#ff0000"/>
  </HBox>

  <CTBForm fx:id="rsl" text="Use Framework as Runtime Shared Library (RSL)" formType="SIMPLE"/>
  <CTBForm fx:id="locale" text="Non-default locale settings" formType="TEXT_FIELD"/>
  <CTBForm fx:id="exclude" text="Non-default locale settings" formType="SIMPLE"/>
  <CTBForm fx:id="interrupt" text="Interrupt compilation by timeout (seconds)" formType="TEXT_FIELD"/>
</FormGroup>
