<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<Tab fx:id="compiller_settings" fx:controller="codeOrchestra.colt.as.ui.propertyTabPane.compilerSettings.CompilerSettingsTabController" text="Compiler Settings" xmlns:fx="http://javafx.com/fxml">
  <content>
    <VBox spacing="10.0">
      <children>
        <fx:include source="sdkSettings_form.fxml" />
        <fx:include source="buildSettings_form.fxml" />
        <fx:include source="productionBuild_form.fxml" />
        <HBox minHeight="-Infinity" spacing="10.0">
          <children>
            <Label minWidth="-Infinity" text="Additional compiler options:" HBox.hgrow="NEVER" />
            <TextField fx:id="optionsTF" HBox.hgrow="ALWAYS" />
          </children>
          <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
          </VBox.margin>
        </HBox>
        <Button minWidth="-Infinity" mnemonicParsing="false" text="Exclude classes..." onAction="#excludeClassesHandler">
          <VBox.margin>
            <Insets left="10.0" />
          </VBox.margin>
        </Button>
      </children>
    </VBox>
  </content>
</Tab>
